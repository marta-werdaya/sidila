<!-- Bagian Tabel lansia -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>Advanced Table</h4>
                <div class="card-header-form">
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search">
                            <div class="input-group-btn">
                                <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="table-lansia">
                        <tr>
                            <th>No</th>
                            <th>Nama</th>
                            <th>NIK</th>
                            <th>Jenis Disabilitas</th>
                            <th>Penyebab</th>
                            <th>Desa</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                        <% for(i = 0; i < disabilities.length; i ++){%>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td><%= disabilities[i].personId.name %></td>
                            <td><%= disabilities[i].personId.nik %></td>
                            <td><%= disabilities[i].disabilityTypeId.name %></td>
                            <td><%= disabilities[i].reasonId.name %></td>
                            <td><%= disabilities[i].personId.villageId.name %></td>
                            <td>
                                <%if( disabilities[i].personId.proposalId.status == "Diterima"){%>
                                <div class="badge badge-success">Diterima</div>
                                <%}else if(disabilities[i].personId.proposalId.status == "Ditolak"){%>
                                <div class="badge badge-danger">Ditolak</div>
                                <% }else{ %>
                                <div class="badge badge-warning">Menunggu Konfirmasi</div>
                                <%}%>

                            </td>
                            <td>
                                <form
                                    action="/admin/disabilitas/<%=disabilities[i].personId.proposalId.id %>?_method=PUT"
                                method="POST">
                                <div class="dropdown">
                                    <a href="#" data-toggle="dropdown"
                                        class="btn btn-outline-info dropdown-toggle">Pilihan</a>
                                    <div class="dropdown-menu">
                                        <a href="#" class="dropdown-item has-icon" data-toggle="modal"
                                            data-target="#detail-disabilities"><i class="fas fa-eye"></i> Detail</a>
                                        <div class="dropdown-divider"></div>
                                        <button href="#" type="submit" class="dropdown-item has-icon"><i
                                                class="fas fa-check"></i>
                                            Validasi</button>
                                        <div class="dropdown-divider"></div>
                                        <a href="javascript:void()"
                                            class="dropdown-item has-icon text-danger button-reject"
                                            data-id="<%= disabilities[i].personId.proposalId.id %>"><i
                                                class="fas fa-trash-alt"></i>
                                            Tolak</a>
                                    </div>
                                </div>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                    </table>
                </div>
            </div>
            <!-- Akhir Tabel -->
            <!-- Tabel Pagination -->
            <div class="card-footer text-right">
                <nav class="d-inline-block">
                    <ul class="pagination mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1 <span
                                    class="sr-only">(current)</span></a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                        </li>
                    </ul>
                </nav>
            </div>
            <!-- Tabel Pagination -->
        </div>
    </div>
</div>