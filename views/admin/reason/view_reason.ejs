<script>
  $('#table-reason').on('click', '.button-edit', function () {
    let id = $(this).data('id');
    let name = $(this).data('name');
    $('#edit-reason').modal('show');
    $('.id').val(id);
    $('.name').val(name);

  });
  $('#table-reason').on('click', '.button-delete', function () {
    let id = $(this).data('id');
    $('#delete-reason').modal('show');
    $('.id').val(id);
  });
</script>

