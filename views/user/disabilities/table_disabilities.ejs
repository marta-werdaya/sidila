<!-- Bagian Tabel lansia -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>
                    <a href="#" data-toggle="modal" data-target="#add-disabilitas">
                        <button class=" btn btn-primary">Tambah Data</button>
                    </a>
                </h4>
                <div class="card-header-form">
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search">
                            <div class="input-group-btn">
                                <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="table-disabilitas">
                        <tr>
                            <th>No</th>
                            <th>Nama</th>
                            <th>NIK</th>
                            <th>Jenis Disabilitas</th>
                            <th>Desa</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                        <% for(let i = 0; i < disabilities.length; i++) {%>
                            <% if(disabilities[i].personId.enrollmentId.userId == username.id){%>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= disabilities[i].personId.name %></td>
                            <td><%= disabilities[i].personId.nik %></td>
                            <td><%= disabilities[i].disabilityTypeId.name %></td>
                            <td><%= disabilities[i].personId.villageId.name %></td>
                            <td>
                                <%if( disabilities[i].personId.proposalId.status == "Diterima"){%>
                                    <div class="badge badge-success">Diterima</div>
                                    <%}else if(disabilities[i].personId.proposalId.status == "Ditolak"){%>
                                    <div class="badge badge-danger">Ditolak</div>
                                    <% }else if(disabilities[i].personId.proposalId.status == "Bantuan Diterima"){ %>
                                    <div class="badge badge-success">Bantuan Diterima</div>
                                    <% }else{ %>
                                    <div class="badge badge-warning">Menunggu Konfirmasi</div>
                                    <%}%>
                            </td>
                            <td>
                                <div class="dropdown">
                                    <a href="#" data-toggle="dropdown"
                                        class="btn btn-outline-info dropdown-toggle">Pilihan</a>
                                    <div class="dropdown-menu">
                                        <a href="javascript: void()" class="dropdown-item has-icon button-update"
                                        data-id="<%= disabilities[i].id %>"
                                data-nik="<%= disabilities[i].personId.nik %>"
                                data-name="<%= disabilities[i].personId.name %>"
                                data-place="<%= disabilities[i].personId.placeOfBirth %>"
                                data-dateOfBirth="<%= disabilities[i].personId.dateOfBirth %>"
                                data-address="<%= disabilities[i].personId.address %>"
                                data-district="<%= disabilities[i].personId.villageId.subDistrictId.name %>"
                                data-village="<%= disabilities[i].personId.villageId.name %>"
                                data-village_id="<%= disabilities[i].personId.villageId.id %>"
                                data-education="<%= disabilities[i].educationId.name %>"
                                data-education_id="<%= disabilities[i].educationId.id %>"
                                data-parent="<%= disabilities[i].parentId.name %>"
                                data-type="<%= disabilities[i].disabilityTypeId.name %>"
                                data-type_id="<%= disabilities[i].disabilityTypeId.id %>"
                                data-reason="<%= disabilities[i].reasonId.name %>"
                                data-reason_id="<%= disabilities[i].reasonId.id %>"
                                data-proposal="<%= disabilities[i].personId.proposalId.name %>"
                                ><i class="fas fa-edit"></i> Edit</a>
                                <div class="dropdown-divider"></div>
                                <a href="javascript:void()" class="dropdown-item has-icon text-danger button-delete"
                                    data-id="<%= disabilities[i].id %>"><i class="fas fa-trash-alt"></i>
                                    Delete</a>
                </div>
            </div>
            </td>
            </tr>
            <% } %>
            <% } %>
            </table>
        </div>
    </div>
    <!-- Akhir Tabel -->
    <!-- Tabel Pagination -->
    <div class="card-footer text-right">
        <nav class="d-inline-block">
            <ul class="pagination mb-0">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
                </li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                </li>
            </ul>
        </nav>
    </div>
    <!-- Tabel Pagination -->
</div>
</div>
</div>