<div class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" id="add-disabilitas">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Data Disabilitas</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body container">
                <form action="/user/disabilitas" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="nik">NIK</label>
                            <input type="number" class="form-control" onfocusout="validateNIK()" id="nik"
                                placeholder="masukan NIK" name="nik">
                            <span class="invalid-feedback"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Nama Lengkap</label>
                            <input type="text" class="form-control" id="name" onfocusout="validateName()"
                                placeholder="masukan nama anda" name="name">
                            <span class="invalid-feedback"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="placeOfBirth">Tempat Lahir</label>
                            <input type="text" class="form-control" id="placeOfBirth"
                                placeholder="masukkan tempat lahir anda" name="placeOfBirth"
                                onfocusout="validatePlace()">
                            <span class="invalid-feedback"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="dateOfBirth">Tanggal Lahir</label>
                            <input type="date" class="form-control" id="dateOfbirth" name="dateOfBirth"
                                onfocusout="validateDate()">
                            <span class="invalid-feedback"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="inputZip">Alamat Tinggal</label>
                            <textarea class="form-control" name="address" onfocusout="validateAddress()" id="address"
                                cols="30" rows="10"></textarea>
                            <span class="invalid-feedback"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="village">Desa</label>
                            <select id="village" class="form-control" name="villageId" onfocusout="validateVillage()">
                                <option>...Pilih Desa...</option>
                                <% for(let i= 0; i < villages.length; i++){ %>
                                <option value="<%= villages[i].id %>"><%= villages[i].name %></option>
                                <% } %>
                            </select>
                            <span class="invalid-feedback"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="education">Pendidikan Tekrakhir</label>
                            <select id="education" class="form-control" name="educationId"
                                onfocusout="validateEducation()">
                                <option selected>Pilih jenjang pendidikan...</option>
                                <% for(let i = 0; i < educations.length; i++ ){ %>
                                <option value="<%= educations[i].id%>"><%= educations[i].name%></option>
                                <% } %>
                            </select>
                            <span class="invalid-feedback"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="parent">Nama Orang Tua</label>
                            <input type="text" class="form-control" id="parent" placeholder="masukkan nama oang tua"
                                name="parent" onfocusout="validateParent()">
                            <span class="invalid-feedback"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="disabilityType">Jenis Disabilitas</label>
                            <select id="disabilityType" class="form-control" name="disabilityTypeId"
                                onfocusout="validateType()">
                                <option selected>Pilih Jenis Disabilitas...</option>
                                <% for(let i = 0; i < disabilityTypes.length; i++ ){ %>
                                <option value="<%= disabilityTypes[i].id%>"><%= disabilityTypes[i].name%></option>
                                <% } %>
                                <span class="invalid-feedback"></span>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="reason"> Penyebab Disabilitas</label>
                            <select id="reason" class="form-control" name="reasonId" onfocusout="validateReason()">
                                <option selected>...Pilih Penyebab Disabilitas...</option>
                                <% for(let i = 0; i < reasons.length; i++) {%>
                                <option value="<%= reasons[i].id %>"><%= reasons[i].name%></option>
                                <% } %>
                                <span class="invalid-feedback"></span>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="proposal">Bantuan yang Diusulkan</label>
                            <textarea class="form-control" id="proposal" onfocusout="validateProposal()" cols="30"
                                rows="10" name="proposalName"></textarea>
                            <span class="invalid-feedback"></span>
                        </div>
                    </div>
                    <!-- <div class="form-row">
                    <div class="form-group col-md-4">
                        <input type="file" class="custom-file-input" id="picture" required>
                        <label class="custom-file-label" for="validatedCustomFile">Pilih gambar</label>
                    </div>
                </div> -->
            </div>
            <div class="modal-footer bg-whitesmoke ">
                <button type="submit" class="btn btn-success">Yes</button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
            </div>
            </form>
        </div>
    </div>
</div>