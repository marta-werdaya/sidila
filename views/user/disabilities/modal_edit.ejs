<div class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" id="edit-disabilitas">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Data Disabilitas</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body container">
                <form action="/user/disabilitas?_method=PUT" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="nik">NIK</label>
                        <input type="number" class="form-control nik" id="nik" placeholder="masukan NIK" name="nik">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Nama Lengkap</label>
                        <input type="text" class="form-control name" id="name" placeholder="masukan nama anda" name="name">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="placeOfBirth">Tempat Lahir</label>
                        <input type="text" class="form-control place" id="placeOfBirth"
                            placeholder="masukkan tempat lahir anda" name="placeOfBirth">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="dateOfBirth">Tanggal Lahir</label>
                        <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth">
                    </div>

                    <div class="form-group col-md-6">
                        <label for="inputZip">Alamat Tinggal</label>
                        <textarea class="form-control address" name="address" id="" cols="30" rows="10"></textarea>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="villageId">Desa</label>
                        <select id="villageId" class="form-control" name="villageId">
                            <option selected id="selectVillage">...Pilih Desa...</option>
                            <% for(let i= 0; i < villages.length; i++){ %>
                            <option value="<%= villages[i].id %>"><%= villages[i].name %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="subdistrictId">Kecamatan</label>
                        <select id="subdistrictId" class="form-control" name="subdistrictId">
                            <option id="selectSubDistrict" selected>...Pilih Kecamatan...</option>
                            <% for(let i= 0; i < subDistricts.length; i++){ %>
                            <option value="<%= subDistricts[i].id %>"><%= subDistricts[i].name %></option>
                            <% } %>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="educationId">Pendidikan Tekrakhir</label>
                        <select id="educationId" class="form-control" name="educationId">
                            <option selected id="selectEducation">Pilih jenjang pendidikan...</option>
                            <% for(let i = 0; i < educations.length; i++ ){ %>
                            <option value="<%= educations[i].id%>"><%= educations[i].name%></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="parent">Nama Orang Tua</label>
                        <input type="text" class="form-control parent" id="parent" placeholder="masukkan nama oang tua" name="parent">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="disabilityTypeId">Jenis Disabilitas</label>
                        <select id="disabilityTypeId" class="form-control" name="disabilityTypeId">
                            <option selected id="selectDisabilityType">Pilih Jenis Disabilitas...</option>
                            <% for(let i = 0; i < disabilityTypes.length; i++ ){ %>
                            <option value="<%= disabilityTypes[i].id%>"><%= disabilityTypes[i].name%></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="reason"> Penyebab Disabilitas</label>
                        <select id="reason" class="form-control" name="reasonId">
                            <option selected id="selectReason">...Pilih Penyebab Disabilitas...</option>
                            <% for(let i = 0; i < reasons.length; i++) {%>
                            <option value="<%= reasons[i].id %>"><%= reasons[i].name%></option>
                            <% } %>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="proposal">Bantuan yang Diusulkan</label>
                        <textarea class="form-control proposal" id="proposal" cols="30" rows="10" name="proposalName"></textarea>
                    </div>
                </div>
                <input type="hidden" name="id" id="id" class="id">
                <!-- <div class="form-row">
                    <div class="form-group col-md-4">
                        <input type="file" class="custom-file-input" id="picture" required>
                        <label class="custom-file-label" for="validatedCustomFile">Pilih gambar</label>
                    </div>
                </div> -->
            </div>
            <div class="modal-footer bg-whitesmoke ">
                <button type="button" class="btn btn-warning" data-dismiss="modal" >Cancel</button>
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
        </div>
    </div>
</div>