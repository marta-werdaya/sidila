<div class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" id="edit-lansia">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> Edit Data Lansia</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/user/lansia?_method=PUT" method="POST">
                <div class="modal-body container">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="name">Nama Lengkap</label>
                            <input type="text" class="form-control name" onfocusout="validateName()" id="name"
                                name="name">
                            <span class="valid-feedback"></span>
                        </div>
                        <div class="form-group col-md-5">
                            <label for="nik">NIK</label>
                            <input type="number" class="form-control nik" id="nik" name="nik"
                                onfocusout="validateNIK()">
                            <span class="invalid-feedback"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <Tempat for="placeOfBirth">Tempat Lahir</label>
                                <input type="text" class="form-control place" name="placeOfBirth" id="placeOfBirth"
                                    onfocusout="validatePlace()">
                                <span class="invalid-feedback"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="dateOfbirth">Tanggal Lahir</label>
                            <input onchange="calculateAge('edit-age','edit-dateOfbirth')" type="date"
                                class="form-control dateOfbirth" onfocusout="validateDate()" id="edit-dateOfbirth"
                                name="dateOfBirth">
                            <span class="invalid-feedback"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="address">Alamat Tinggal</label>
                            <textarea class="form-control address" name="address" onfocusout="validateAddress()"
                                id="address" cols="30" rows="10"></textarea>
                            <span class="invalid-feedback"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label for="age">Umur</label>
                            <input type="number" disabled class="form-control age" id="edit-age" name="age">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="villageId">Desa</label>
                            <select id="villageId" class="form-control" name="villageId" onfocusout="validateVillage()">
                                <option id="selectVillage" selected="true" value="selectVillage">...Pilih Desa...
                                </option>
                                <% for(let i= 0; i < villages.length; i++){ %>
                                <option value="<%= villages[i].id %>"><%= villages[i].name %></option>
                                <% } %>
                            </select>
                            <span class="invalid-feedback"></span>
                        </div>
                        <!-- <div class="form-group col-md-6">
                            <label for="subdistrictId">Kecamatan</label>
                            <select id="subdistrictId" class="form-control" name="subdistrictId">
                                <option id="selectSubDistrict" selected>...Pilih Kecamatan...</option>
                                <% for(let i= 0; i < subDistricts.length; i++){ %>
                                <option value="<%= subDistricts[i].id %>"><%= subDistricts[i].name %></option>
                                <% } %>
                            </select>
                        </div> -->
                    </div>
                    <!-- <div class="form-row">
                        <div class="form-group col-md-4">
                            <input type="file" class="custom-file-input" id="picture">
                            <label class="custom-file-label" for="validatedCustomFile">Pilih gambar</label>
                        </div>
                    </div> -->
                    <input type="hidden" class="form-control id" id="id" name="id">
                </div>
                <div class="modal-footer bg-whitesmoke ">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

