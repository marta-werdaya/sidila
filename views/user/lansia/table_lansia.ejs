<!-- Bagian Tabel lansia -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>
                    <a href="#" data-toggle="modal" data-target="#add-lansia">
                        <button class=" btn btn-primary">Tambah Data</button>
                    </a>
                </h4>
                <div class="card-header-form">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search">
                        <div class="input-group-btn">
                            <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-2">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered " id="table-lansia">
                        <tr>
                            <th>No</th>
                            <th>Nama</th>
                            <th>NIK</th>
                            <th>Umur</th>
                            <th>Desa</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                        <% for(let i = 0 ; i < lansias.length; i++) { %>
                        <tr>
                            <td><%= i + 1%></td>
                            <td><%= lansias[i].personId.name %></td>
                            <td><%= lansias[i].personId.nik %></td>
                            <td><%= lansias[i].age %></td>
                            <td><%= lansias[i].personId.villageId.name %></td>
                            <td>
                                <%if(lansias[i].personId.proposalId.status == "Diterima"){%>
                                <div class="badge badge-success">Diterima</div>
                                <%}else if(lansias[i].personId.proposalId.status == "Ditolak"){%>
                                <div class="badge badge-danger">Ditolak</div>
                                <% }else{ %>
                                <div class="badge badge-warning">Menunggu Konfirmasi</div>
                                <%}%>
                            </td>
                            <td>
                                <div class="dropdown">
                                    <a href="#" data-toggle="dropdown"
                                        class="btn btn-outline-info dropdown-toggle">Pilihan</a>
                                    <div class="dropdown-menu">
                                        <a href="javascript: void()" class="dropdown-item has-icon button-update"
                                         data-id="<%=lansias[i].id%>"
                                data-name="<%=lansias[i].personId.name%>"
                                data-nik="<%=lansias[i].personId.nik%>"
                                data-place="<%= lansias[i].personId.placeOfBirth %>"
                                data-dateOfBirth="<%=lansias[i].personId.dateOfBirth%>"
                                data-address="<%=lansias[i].personId.address%>"
                                data-age="<%=lansias[i].age%>"
                                data-villageid = "<%= lansias[i].personId.villageId.id %>"
                                data-kecamatanId = "<%= lansias[i].personId.villageId.subDistrictId.id%>"
                                data-village = "<%= lansias[i].personId.villageId.name%>"
                                data-kecamatan = "<%= lansias[i].personId.villageId.subDistrictId.name %>"
                                ></i> Edit</a>
                                <div class="dropdown-divider"></div>
                                <a href="javascript: void()" class="dropdown-item has-icon text-danger button-delete"
                                    data-id="<%= lansias[i].id%>"><i class="fas fa-trash-alt"></i>
                                    Delete</a>
                </div>
            </div>
            </td>
            </tr>
            <% } %>
            </table>
        </div>
    </div>
    <!-- Akhir Tabel -->
    <!-- Tabel Pagination -->
    <div class="card-footer text-right">
        <nav class="d-inline-block">
            <ul class="pagination mb-0">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
                </li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                </li>
            </ul>
        </nav>
    </div>
    <!-- Tabel Pagination -->
</div>
</div>
</div>